{%- assign image_url = image_url -%}
{% if video_object != blank %}
  {% assign videoCode = video_object.url | split: '=' %}
  <iframe width="100%" height="1500" src="//www.youtube.com/embed/{{ videoCode[1] }}?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&playlist={{ videoCode[1] }}&mute=1&controls=0&showinfo=0" frameborder="0" allowfullscreen></iframe>
{% else %}
  <div class="video-player intro__video section-block">
    <video id="video-player" class="video-js vjs-theme-ulla js-video-component" poster="{{image_url}}">
      <source
        src="{{video_text}}"
        type="video/mp4"
      >
    </video>
  </div>
{% endif %}
