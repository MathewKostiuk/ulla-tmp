body {
  background: #f3e3db;
  color: #000;
}

.wrapper {
  padding: 5vh 30px 5vh;
  text-align: center;
}

.header-logo {
  position: relative;
  max-width: 260px;
  margin: 0 auto 2vh;
  font-size: 0;

  a {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  path {
    fill: #000;
  }
}

.giftcard {
  width: 100%;
  max-width: 460px;
  margin: 0 auto;

  .giftcard__border {
    padding: 20px;

    &.disabled {
      border: 3px solid #d16d5b;
    }
  }

  .giftcard__title {
    margin-bottom: 3vh;
    font: 400 12px/1.2 'Untitled Sans', sans-serif;
    letter-spacing: 0.016667em;

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }
  }

  .giftcard__tag {
    display: inline-block;
    margin-bottom: 2.5vh;

    &.giftcard__tag--disabled,
    &.giftcard__tag--expired {
      color: #d16d5b;
    }

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }
  }

  .giftcard__image {
    max-width: 275px;
    margin: 0 auto 3vh;

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }
  }

  .giftcard__amount {
    margin-bottom: 2vh;
    font-weight: 400;
    font-size: 13px;

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }
  }

  .giftcard__instructions {
    font-size: 12px;
    letter-spacing: 0.016667em;

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }
  }

  .giftcard__code {
    margin-bottom: 4vh;

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }

    span {
      padding-bottom: 2px;
      border-bottom: 1px solid #000;
    }
  }

  .giftcard__qr-code {
    margin-bottom: 4vh;
    text-align: center;

    @media (max-width: 768px) {
      margin-bottom: 20px;
    }
    
    img {
      margin: 0 auto;
    }
  }

  .giftcard__actions {
    display: flex;
    flex-flow: row wrap;
    max-width: 420px;
    margin: 0 auto;
    justify-content: space-between;

    & > * {
      flex: 0 0 calc(50% - 6px);
      max-width: calc(50% - 6px);
    }

    @media (max-width: 375px) {
      justify-content: center;

      & > * {
        flex: 0 0 100%;
        max-width: 100%;
        margin-bottom: 10px;
      }
    }
  }
}

.giftcard__code__line {
  margin-top: 12px;
}
