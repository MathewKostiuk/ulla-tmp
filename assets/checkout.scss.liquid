/* ------------------------------------------------------------ *\
  Tooltip Primary
\* ------------------------------------------------------------ */

.tooltip-primary {
  position: relative;
  text-align: center;

  &:hover {
    &:after {
      pointer-events: auto;
    }

    .tooltip__body {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }
  }

  &::after {
    position: absolute;
    bottom: 100%;
    left: 0;
    width: 100%;
    height: 25px;
    pointer-events: none;
    content: '';
  }

  .tooltip__body {
    position: absolute;
    bottom: 100%;
    left: 50%;
    z-index: 200;
    width: 217px;
    padding: 14px 21px 11px;
    margin-left: 4px;
    margin-bottom: 25px;
    background: #f3e3db;
    transform: translateX(-50%);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.4s, visibility 0.4s;

    &::before {
      position: absolute;
      bottom: -6px;
      left: 50%;
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 6px 6px 0 6px;
      border-color: #f3e3db transparent transparent transparent;
      margin-left: -7px;
      content: '';
    }
  }

  .tooltip__body .nav-block {
    margin-left: -21px;
    margin-right: -21px;
  }

  &.expanded {
    .tooltip__link span::before {
      opacity: 1;
    }

    .tooltip__body {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }
  }
}

/*  Tooltip Primary Left  */
.tooltip-primary--left {
  text-align: left;

  .tooltip__body {
    left: 0;
    margin-left: 0;
    transform: translateX(0);
  }

  .tooltip__body::before {
    left: 32px;
    margin-left: 0;
  }
}

/*  Tooltip Primary Right  */
.tooltip-primary--right {
  text-align: right;

  .tooltip__body {
    left: auto;
    right: 0;
    margin-left: 0;
    transform: translateX(0);
  }

  .tooltip__body::before {
    left: auto;
    right: 32px;
    margin-left: 0;
  }
}

