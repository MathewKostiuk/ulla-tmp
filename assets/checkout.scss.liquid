.input-checkbox,
.input-radio {
  position: relative;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  border: none !important;
  vertical-align: 0;

  &:focus {
    outline: none;
  }

  &:after {
    content: '';
    position: relative;
    display: block;
    width: 18px;
    height: 18px;
    background: transparent;
    border: 1px solid #ababab;
    border-radius: 9px;
    -webkit-transform: translate(-4px, -4px) !important;
    -ms-transform: translate(-4px, -4px) !important;
    transform: translate(-4px, -4px) !important;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-transition: all 0s;
    -o-transition: all 0s;
    transition: all 0s;
    opacity: 1;
    top: 0;
    left: 0;
    margin: 0;
  }

  &:checked {
    box-shadow: none;
    background: #000;

    &:after {
      border-color: #000;
    }
  }
}

